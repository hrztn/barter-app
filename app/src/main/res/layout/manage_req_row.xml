<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/primary"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tertiary"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="3"
                    android:background="@color/secondary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="200dp">

                        <ImageView
                            android:id="@+id/m_user_imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            app:srcCompat="@drawable/ic_baseline_account_circle_24"
                            tools:srcCompat="@drawable/ic_baseline_account_circle_24" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/m_textView_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="bottom"
                            android:paddingLeft="15dp"
                            android:text="User 1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/cabin_medium"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="REQUESTED: "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/cabin_medium"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OFFERED: "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/cabin_medium"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/userdashboard"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/mrequestItemImageView"
                            android:layout_width="103dp"
                            android:layout_height="83dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/border_imageview" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mrequestItemName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ITEM NAME"
                                android:fontFamily="@font/cabin_medium"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/mrequested_condition_textViewD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Condition: Good"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/mrequested_quantity_textView_D"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity: 1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/offeredItemView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/userdashboard"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/mofferedItemImageView"
                            android:layout_width="103dp"
                            android:layout_height="83dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/border_imageview" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/moffereditem_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ITEM NAME"
                                android:textSize="15sp"
                                android:fontFamily="@font/cabin_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/moffered_condition_textViewD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Condition: Good"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/moffered_quantity_textView_D"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity: 1"
                                android:textAlignment="viewStart"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/mrequestMessage"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="2dp"
                    android:hint="SEND MESSAGE HERE"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:fontFamily="@font/cabin_medium"
                    android:background="@color/white"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/accept_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/primary"
                        android:text="Accept"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/deleterequest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/primary"
                        android:text="Delete"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/Reject_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/primary"
                        android:text="Reject"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/chatButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"

                        android:layout_weight="1"
                        android:backgroundTint="@color/primary"
                        android:text="Chat"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>