<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="25dp"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/onlylogo_transparent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="@font/bungee"
        android:text="LOGIN HERE!"
        android:textColor="@color/primary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="@font/cabin_medium"
        android:text="Please enter the required details below."
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter your email here."
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:background="@drawable/round_edit_txt"/>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/login_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter your password here."
            android:padding="10dp"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:background="@drawable/round_edit_txt"/>

        <TextView
            android:id="@+id/login_forgotPass_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cabin_medium"
            android:textStyle="bold"
            android:text="Forgot Password?"
            android:textAlignment="textEnd"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/login_resetPass_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cabin_medium"
            android:textStyle="bold"
            android:text="Reset Password?"
            android:textAlignment="textEnd"
            android:visibility="gone"/>


    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/primary"
        android:padding="12dp"
        android:text="ENTER TO LOGIN"
        android:textColor="@color/white"
        android:fontFamily="@font/cabin_medium"/>

    <TextView
        android:id="@+id/login_reg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register new account here!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/cabin_medium"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>






</LinearLayout>