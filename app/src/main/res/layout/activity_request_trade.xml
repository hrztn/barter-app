<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".RequestTradeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/primary"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/userdashboard"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/requestItemImageView"
                    android:layout_width="103dp"
                    android:layout_height="83dp"
                    app:srcCompat="@drawable/border_imageview" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/requestItemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ITEM NAME"
                        android:textColor="@color/black"
                        android:fontFamily="@font/cabin_medium"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/requested_cond_textViewD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition: Good"
                        android:textSize="15sp"
                        android:fontFamily="@font/cabin_medium"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/requested_quantity_textView_D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity : 1"
                        android:textSize="15sp"
                        android:fontFamily="@font/cabin_medium"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black" />





                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="What do you want to trade with?"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/cabin_medium"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@color/fourth"/>

            <LinearLayout
                android:id="@+id/offeredItemView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/userdashboard"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/offeredItemImageView"
                    android:layout_width="103dp"
                    android:layout_height="83dp"
                    app:srcCompat="@drawable/border_imageview" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/offereditem_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ITEM NAME"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/cabin_medium"/>

                    <TextView
                        android:id="@+id/offered_cond_textViewD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition: Good"
                        android:textSize="15sp"
                        android:fontFamily="@font/cabin_medium"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/offered_quantity_textView_D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity : 1"
                        android:textSize="15sp"
                        android:fontFamily="@font/cabin_medium"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

            <EditText
                android:id="@+id/requestMessage"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:hint="Chat Message"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:textSize="16dp" />

            <Button
                android:id="@+id/request_send_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/primary"
                android:padding="10dp"
                android:text="REQUEST TO TRADE"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>